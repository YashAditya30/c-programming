#include<stdio.h>
int main(){
    int l,b,p,a;
    printf("enter length of rectangle :");
    scanf("%d",&l);
    printf("enter breadth of rectangle :");
    scanf("%d",&b);
    a=l*b;
    p=2*(l+b);
    printf("Area: %d\n", a);
printf("perimeter : %d\n", p);
    if(p>a)
    printf(" perimeter of rectangle is greater than its area");
if(a>p)
printf("area of rectangle is greater than its perimeter");
return 0;
}
